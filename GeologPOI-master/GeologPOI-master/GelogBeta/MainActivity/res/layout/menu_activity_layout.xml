<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/customshape">

    <com.markupartist.android.widget.ActionBar
        xmlns:app="http://schemas.android.com/apk/res/com.geolog"
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        android:layout_height="50dp"
        app:title="Geolog" />
	
	<Button
	    android:id="@+id/Aggiungi_POI"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="49dp"
	    android:text="Aggiungi POI" />

	<Button
	    android:id="@+id/ricerca_poi"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/Aggiungi_POI"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="89dp"
	    android:text="RicercaPOI" />

	<Button android:id="@+id/selezionaCategorie"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_above="@+id/visualizzaPOI"
		android:layout_alignParentLeft="true" android:layout_marginBottom="32dp"
		android:text="Seleziona Categorie di Ricerca" />

	<Button
	    android:id="@+id/visualizzaPOI"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/ricerca_poi"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="35dp"
	    android:text="Viualizza POI" />

	<ListView
	    android:id="@+id/listCategory"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/actionbar" >

	</ListView>

</RelativeLayout>